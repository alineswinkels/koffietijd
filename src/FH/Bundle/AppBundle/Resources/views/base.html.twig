{% extends 'FHStyleBundle::base_responsive.html.twig' %}

{% block head_style %}
    {% stylesheets
    'assets/frontend/build/app.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body_script_bottom %}
    {% javascripts
    'assets/frontend/build/app.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block title %}Koffietijd{% endblock %}

{% block header %}
    {% if app.user %}
        <h1>Welkom {{ app.user }}</h1>
    {% endif %}
{% endblock %}

{% block footer %}
    {% if app.user %}
        <a href="{{ path('user_logout') }}">Uiltoggen</a>
    {% endif %}
{% endblock %}
