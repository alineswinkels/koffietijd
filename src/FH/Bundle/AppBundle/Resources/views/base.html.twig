{% extends 'FHStyleBundle::base_responsive.html.twig' %}

{% block head_style %}
    <link type="text/css" media="all" rel="stylesheet" href="{{ asset('style.css') }}" />
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'>
{% endblock %}

{% block body_script_bottom %}
    {% javascripts
    'assets/frontend/build/app.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block title %}Koffietijd!{% endblock %}

{% block container %}
    {% if sessionProvider.currentSession %}
        <div id='count_down'></div>
        <span class="js-counter" data-url="{{ path('home') }}" data-seconds-left="{{ sessionProvider.currentSession.secondsLeft }}"></span>
    {% endif %}

    <div>
        {% block content %}{% endblock %}
    </div>

    {% if app.user %}
        <a id='logout' href="{{ path('user_logout') }}"></a>
    {% endif %}
{% endblock %}
