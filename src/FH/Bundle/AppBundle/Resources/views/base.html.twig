{% extends 'FHStyleBundle::base_responsive.html.twig' %}

{% block head_style %}
    <link type="text/css" media="all" rel="stylesheet" href="{{ asset('style.css') }}" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'>
{% endblock %}

{% block body_script_bottom %}
    {% javascripts
    'assets/frontend/build/app.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block title %}Koffietijd!{% endblock %}

{% block container %}
    <div>
        {% block content %}{% endblock %}
    </div>

    {% if app.user %}
        <h3>Welkom {{ app.user }}</h3>
        <a href="{{ path('user_logout') }}">Uitloggen</a>
    {% endif %}
{% endblock %}
